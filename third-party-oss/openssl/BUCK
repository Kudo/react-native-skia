  platform_shared_lib = [
    ('macosx', 'lib/libssl.dylib'),
  ],

  header_namespace = "",
  exported_headers = subdir_glob(
    [
      ('include/openssl', '**/*.h'),
    ],
    prefix = "openssl",
  ),

  visibility = [ 'PUBLIC' ],
)
